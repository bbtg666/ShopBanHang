<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <!-- bootstrap -->
    <link href="~/assets/client/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/client/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">
    <link href="~/assets/client/themes/css/bootstrappage.css" rel="stylesheet" />

    <!-- global styles -->
    <link href="~/assets/client/themes/css/flexslider.css" rel="stylesheet" />
    <link href="~/assets/client/themes/css/main.css" rel="stylesheet" />
    <link href="~/assets/client/themes/css/jquery.fancybox.css" rel="stylesheet" />

    <!-- scripts -->
    <script src="~/assets/client/themes/js/jquery-1.7.2.min.js"></script>
    <script src="~/assets/client/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/assets/client/themes/js/superfish.js"></script>
    <script src="~/assets/client/themes/js/jquery.scrolltotop.js"></script>
